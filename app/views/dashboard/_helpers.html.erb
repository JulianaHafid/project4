<div class="dashboard-helpers-wrapper">
  <div class="col-md-12">
    <h3>Helpers Available</h3>
      <%= form_tag dashboard_helpers_path, :method => 'get', :id => "service_search"  do %>
      <%= text_field_tag :search, params[:search]%>
      <%= submit_tag "Search", :name => nil  %>
      <% end %>
      <br />
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Category</th>
          <th>Date</th>
          <th>Type</th>
        </tr>
      </thead>
      <tbody>
        <% @search.each do |service| %>
        <tr>
          <td><%= service.task_list %></td>
          <td><%= service.date_when_seek_help %></td>
          <td><%= service.service_type %></td>
          <td><%= link_to 'Contact', service, class:"btn btn-sm btn-info" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
