<p id="notice"><%= notice %></p>

<div class="profile-title">
  <h1>Profiles</h1>
</div>


<div class="container profile_table">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Avatar</th>
        <th>Name</th>
        <th>Contact</th>
        <th>Address</th>
        <th>Gender</th>
        <th>Select Options</th>
      </tr>
    </thead>

    <tbody>
      <% @profiles.each do |profile| %>
        <tr>
          <td><%= image_tag profile.avatar_url(:display), :class=>"avatar_picture" %></td>
          <td><%= profile.name %></td>
          <td><%= profile.contact %></td>
          <td><%= profile.address %></td>
          <td><%= profile.gender %></td>
          <td>
          <button type="button" class="btn btn-default btn-xs"><%= link_to 'Show', profile %></button>
          <button type="button" class="btn btn-default btn-xs"><%= link_to 'Edit', edit_profile_path(profile) %></button>
          <button type="button" class="btn btn-default btn-xs"><%= link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Profile', new_profile_path %>
