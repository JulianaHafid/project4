<%= form_for(@service, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @service.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h4>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="services-header">
    <h1>Seek or Offer Help</h1>
  </div>

  <table summary= "Need help or would like to offer your help?">


    <div class="form-group type">
      <div class="col-sm-12">
        <%= f.label "Are you", class: "control-label" %>
        <%= f.select(:service_type,options_for_select([['Seeking Help', 'Seeking Help'],['Offering Help', 'Offering Help']]),class: 'form-control') %>
      </div>
    </div>
    <br />

  <div class="services-form">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2">
        <%= label_tag 'task_babysit', 'Babysit' %>
        <%= check_box_tag 'service[task_list][]', 'Babysit', checked('babysit'), id: 'task_babysit',class: 'form-control' %>
        </div>

        <div class="col-sm-2">
        <%= label_tag 'task_householdchores', 'Household Chores' %>
        <%= check_box_tag 'service[task_list][]', 'Household Chores', checked('household chores'), id: 'task_householdchores',class: 'form-control' %>
        </div>

        <div class="col-sm-2">
        <%= label_tag 'task_elderly', 'Elderly Care'%>
        <%= check_box_tag 'service[task_list][]', 'Elderly Care', checked('elderly care'), id: 'task_elderlycare',class: 'form-control' %>
        </div>

        <div class="col-sm-2">
        <%= label_tag 'task_marketing', 'Marketing' %>
        <%= check_box_tag 'service[task_list][]', 'Marketing', checked('marketing'), id: 'task_marketing',class: 'form-control' %>
        </div>

        <div class="col-sm-1-offset col-sm-3">
          <%= f.label "Date of service" %>
          <%= f.date_field(:date_when_seek_help, min: Date.today,:id => "datepicker", class: 'form-control')%>
        </div>
      </div>
    </div>
  </div>

    <br />


<%= f.submit class: "btn btn-default" %>
<% end %>


<%= link_to services_path, class: 'btn btn-default' do %>
  <span class="glyphicon glyphicon-list-alt"></span>
  Back
<% end %>
