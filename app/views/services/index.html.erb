<div class="services-title">
  <h1>Listing services</h1>
</div>

<div class="container services_table">
  <div class="col-md-12">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Type</th>
          <th>Task List</th>
          <th>Date Needed</th>
          <th>Options</th>
        </tr>
      </thead>

      <tbody>
        <% @services.each do |service| %>
        <tr>
          <td><%= service.service_type %></td>
          <td><%= service.task_list %></td>
          <td><%= service.date_when_seek_help %></td>
          <td>
          <button type="button" class="btn btn-default btn-xs"><%= link_to 'Show', service %></button>
          <button type="button" class="btn btn-default btn-xs"><%= link_to 'Edit', edit_service_path(service) %></button>
          <button type="button" class="btn btn-default btn-xs"><%= link_to 'Delete', service, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to new_service_path, class: "btn btn-default" do %>
  <span class="glyphicon glyphicon-save"></span>
New Service
<% end %>
